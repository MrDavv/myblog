<% include ../include/header.ejs%>
<div class="container">
    <form action="/articles/add" method="post"
          role="form" class="form-horizontal" xmlns="http://www.w3.org/1999/html">
        <div class="form-group">
            <label for="title" class="control-label col-sm-2">标题</label>
            <div class="input-group col-sm-10">

                <input type="text" name="title"
                       id="title" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label for="content" class="control-label col-sm-2">正文</label>
            <div class="input-group col-sm-10">
                <textarea name="content" placeholder="输入文章内容"
                       id="content" rows="20" style="resize: none;" class="form-control"/>
                </textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-6">
                <button type="submit" class="btn btn-primary">提交</button>
            </div>

        </div>
    </form>
</div>
<% include ../include/footer.ejs%>